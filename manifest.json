{
  "manifest_version": 3,
  "name": "Simple Timer Extension",
  "version": "1.0",
  "description": "A simple timer extension with customizable notifications and dark mode",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}
